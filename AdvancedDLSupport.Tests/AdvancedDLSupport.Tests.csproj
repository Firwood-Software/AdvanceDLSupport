<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <IsPackable>false</IsPackable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Configurations>Debug;Release</Configurations>
    <Platforms>AnyCPU;x86;x64</Platforms>
  </PropertyGroup>
  <PropertyGroup>
    <IsPackable>false</IsPackable>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="FsCheck.Xunit" Version="3.0.0-alpha2" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.5.0" />
    <PackageReference Include="xunit" Version="2.3.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.3.1" />
    <DotNetCliToolReference Include="dotnet-xunit" Version="2.3.1" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="Data\AdvancedDLSupport.Tests.dll.config">
      <Link>AdvancedDLSupport.Tests.dll.config</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="xunit.runner.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\AdvancedDLSupport\AdvancedDLSupport.csproj" />
  </ItemGroup>
  <PropertyGroup Condition="'$(Platform)' == 'x86'">
    <CMakePlatform>-x86</CMakePlatform>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Platform)' == 'x64'">
    <CMakePlatform>-x64</CMakePlatform>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Platform)' == 'AnyCPU'">
    <!--suppress CheckTagEmptyBody -->
      <CMakePlatform></CMakePlatform>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
    <CMakeBuildDir>$(MSBuildProjectDirectory)\c\cmake-build-debug$(CMakePlatform)</CMakeBuildDir>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <CMakeBuildDir>$(MSBuildProjectDirectory)\c\cmake-build-release$(CMakePlatform)</CMakeBuildDir>
  </PropertyGroup>
  <PropertyGroup Condition="'$(OS)' == 'Unix'">
    <CMakeGenerator>"Unix Makefiles"</CMakeGenerator>
  </PropertyGroup>
  <PropertyGroup Condition="'$(OS)' == 'Windows_NT'">
    <CMakeGenerator-x86>"Visual Studio 15 2017"</CMakeGenerator-x86>
    <CMakeGenerator>"Visual Studio 15 2017 Win64"</CMakeGenerator>
  </PropertyGroup>
  <Target Name="InitCMake" AfterTargets="BeforeBuild" Condition="!Exists('$(CMakeBuildDir)\CMakeCache.txt')">
    <Exec Command="mkdir $(CMakeBuildDir)" />
    <Exec Command="cmake -G $(CMakeGenerator) -DOUTPUT_PATH=$(OutDir) -DPROJECT_PATH=$(MSBuildProjectDirectory) -DTARGET_PLATFORM=$(Platform) .." WorkingDirectory="$(CMakeBuildDir)" />
  </Target>
  <Target Name="InitWinCMake" AfterTargets="InitCMake" Condition="'$(OS)' == 'Windows_NT'">
    <Exec Command="mkdir $(CMakeBuildDir)-x86" />
    <Exec Command="cmake -G $(CMakeGenerator-x86) -DOUTPUT_PATH=$(OutDir) -DPROJECT_PATH=$(MSBuildProjectDirectory) -DTARGET_PLATFORM=$(Platform) .." WorkingDirectory="$(CMakeBuildDir)-x86" />
  </Target>
  <Target Name="CompileUnixTestLibraries" AfterTargets="AfterBuild" Condition="'$(OS)' == 'Unix'">
    <Exec Command="cmake --build ." WorkingDirectory="$(CMakeBuildDir)" />
    <Exec Command="cmake -DCOMPONENT=standard --config Debug -P cmake_install.cmake" WorkingDirectory="$(CMakeBuildDir)" />
    <Exec Command="cmake -DCOMPONENT=x32-only --config Debug -P cmake_install.cmake" WorkingDirectory="$(CMakeBuildDir)" />
  </Target>
  <Target Name="CompileWinTestLibraries" AfterTargets="AfterBuild" Condition="'$(OS)' == 'Windows_NT'">
    <Exec Command="cmake --build . --config Release" WorkingDirectory="$(CMakeBuildDir)" />
    <Exec Command="cmake --build . --config Release" WorkingDirectory="$(CMakeBuildDir)-x86" />
    <Exec Command="cmake -DCOMPONENT=standard -P cmake_install.cmake" WorkingDirectory="$(CMakeBuildDir)" />
    <Exec Command="cmake -DCOMPONENT=x32-only -P cmake_install.cmake" WorkingDirectory="$(CMakeBuildDir)-x86" />
  </Target>
</Project>